<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_ment1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:text="삭제하시겠습니까?"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>


    <TextView
        android:id="@+id/tv_ment2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_ment1"
        android:text="Are you sure delete it?"
        android:textSize="16dp"
        android:textColor="@color/gray_9d"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ment2"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:weightSum="1">

        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:gravity="center"
            android:text="취소"
            android:textColor="@color/base_color"
            android:textSize="14dp"
            android:background="@drawable/rectangle_stroke_basecolor"/>

        <Button
            android:id="@+id/bt_ok"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:text="확인"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:background="@color/base_color"/>




    </LinearLayout>




</RelativeLayout>